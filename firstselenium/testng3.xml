			<class name="parallel.MultiBrowserParallelTesting" />
		</classes>
	</test>  
	<test name="Test on Edge">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="parallel.MultiBrowserParallelTesting" />
		</classes>
	</test>  
</suite> <!-- Suite -->
